[Unit]
Description=Logitech MX Master 3S Configuration Daemon
Documentation=https://github.com/RAprogramm/logi-mx
After=graphical-session.target
PartOf=graphical-session.target

[Service]
Type=simple
Environment="RUST_LOG=info"
ExecStart=/usr/bin/logi-mx-daemon
Restart=on-failure
RestartSec=5
MemoryMax=256M
MemoryHigh=192M
TasksMax=64

[Install]
WantedBy=graphical-session.target
